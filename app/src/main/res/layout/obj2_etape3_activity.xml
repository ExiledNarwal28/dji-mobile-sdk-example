<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_operation"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="net.info420.fabien.dronetravailpratique.activities.Obj2Etape3Activity">

  <TextView
    android:id="@+id/tv_obj2_step1_title"
    android:text="@string/objectif2_etape3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"/>

  <TextView
    android:id="@+id/tv_obj2_step1_desc"
    android:text="@string/objectif2_etape3_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_obj2_step1_title"
    android:textSize="15dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="37dp"/>

  <TextView
    android:text="@string/original_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/tv_obj2_step1_desc"
    android:layout_marginTop="20dp"
    android:id="@+id/tv_image"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:layout_marginTop="20dp"
    android:id="@+id/iv_image"
    android:layout_below="@+id/btn_resultat"
    android:layout_centerHorizontal="true"/>

  <Button
    android:text="@string/original"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:id="@+id/btn_original"
    android:layout_below="@+id/tv_obj2_step1_title"
    android:layout_alignLeft="@+id/iv_image"
    android:layout_alignStart="@+id/iv_image"/>

  <Button
    android:text="@string/resultat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:id="@+id/btn_resultat"
    android:layout_below="@+id/tv_obj2_step1_title"
    android:layout_alignRight="@+id/iv_image"
    android:layout_alignEnd="@+id/iv_image"/>

</RelativeLayout>