<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

  <TextureView
    android:id="@+id/video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/lyt_gimbal" />

  <LinearLayout
    android:id="@+id/lyt_gimbal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_above="@+id/lyt_camera" >
    <Button
      android:id="@+id/btn_pitch_moins"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/pitch_moins"
      android:textSize="12sp"/>
    <Button
      android:id="@+id/btn_pitch_plus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/pitch_plus"
      android:textSize="12sp"/>
    <Button
      android:id="@+id/btn_yaw_moins"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/yaw_moins"
      android:textSize="12sp"/>
    <Button
      android:id="@+id/btn_yaw_plus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/yaw_plus"
      android:textSize="12sp"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/lyt_camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true" >
    <Button
      android:id="@+id/btn_capturer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/capturer"
      android:textSize="12sp"/>

    <ToggleButton
      android:id="@+id/btn_enregistrer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/demarrer_enregistrement"
      android:textOn="@string/arreter_enregistrement"
      android:textOff="@string/demarrer_enregistrement"
      android:textSize="12sp"
      android:checked="false" />

    <Button
      android:id="@+id/btn_mode_photo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/mode_photo"
      android:textSize="12sp"/>

    <Button
      android:id="@+id/btn_mode_video"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/mode_video"
      android:textSize="12sp" />
  </LinearLayout>

  <TextView
    android:id="@+id/timer"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="23dp"
    android:gravity="center"
    android:textColor="#ffffff"
    android:layout_alignTop="@+id/video"
    android:layout_centerHorizontal="true" />
</RelativeLayout>