    android:layout_marginTop="22dp"
    android:id="@+id/btn_obj1_step3_l"/>

  <Button
    android:text="M"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_obj1_step3_g"
    android:layout_marginTop="22dp"
    android:id="@+id/btn_obj1_step3_m"/>

  <Button
    android:text="N"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_obj1_step3_g"
