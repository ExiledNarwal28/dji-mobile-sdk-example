    android:layout_toRightOf="@id/btn_obj1_step3_d"
    android:layout_marginTop="22dp"
    android:id="@+id/btn_obj1_step3_e"/>

  <Button
    android:text="F"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_obj1_step3_run"
    android:layout_toRightOf="@id/btn_obj1_step3_e"
    android:layout_marginTop="22dp"
